<p id="notice"><%= notice %></p>

<p>
  <strong>News:</strong>
  <%= @news_version.news.number %>
</p>

<p>
  <strong>Title:</strong>
  <%= @news_version.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @news_version.content %>
</p>

<p>
  <strong>Published at:</strong>
  <%= @news_version.published_at %>
</p>

<p>
  <strong>Created at:</strong>
  <%= @news_version.created_at %>
</p>

<p>
  <strong>Updated at:</strong>
  <%= @news_version.updated_at %>
</p>


<% if @news_comments.present? %>
    <h4>comments:</h4>
    <% @news_comments.each.with_index do |item, index| %>
      <p><%= index + 1 %>. <%= item.comment %></p>
    <% end %>
<% end %>
<br>

<%= form_with(model: @comment, local: true, url: news_comments_path) do |form| %>
        <%= form.hidden_field :news_id  %>

        <div class="field">
          <%= form.text_field :comment %>
        </div>

    <div class="actions">
      <%= form.submit %>
    </div>
<% end %>

<%= link_to 'Edit', edit_admin_news_version_path(@news_version) %> |
<%= link_to 'Back', admin_news_versions_path %>
